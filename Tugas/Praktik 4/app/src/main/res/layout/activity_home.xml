<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    android:background="@color/bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masjid Pro"
            android:textSize="36dp"/>
        <TextView
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by : Khoirudin Ansori"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/home_background">
        <androidx.cardview.widget.CardView
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#000"
            app:cardCornerRadius="15dp">
            <Button
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/identitas"
                android:text="Identitas"
                android:textAllCaps="false"
                android:background="@drawable/button_menu"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#000"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <Button
                android:layout_gravity="center"
                android:id="@+id/jadwal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jadwal"
                android:background="@drawable/button_menu"
                android:textAllCaps="false"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="#000">
            <Button
                android:layout_gravity="center"
                android:id="@+id/pengumuman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_menu"
                android:text="Pengumuman"
                android:textAllCaps="false"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="#000">
            <Button
                android:id="@+id/marque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marque"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:background="@drawable/button_menu"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="#000">
            <Button
                android:id="@+id/tagline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tagline"
                android:textAllCaps="false"
                android:background="@drawable/button_menu"
                android:layout_gravity="center"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:cardBackgroundColor="#000">
            <Button
                android:layout_gravity="center"
                android:id="@+id/slideshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SlideShow"
                android:textAllCaps="false"
                android:background="@drawable/button_menu"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>